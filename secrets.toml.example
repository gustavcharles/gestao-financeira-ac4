# Exemplo de configuração do Firebase (secrets.toml)
# Renomeie este arquivo para .streamlit/secrets.toml para rodar localmente com acesso ao banco
# Ou copie o conteúdo para a área de "Secrets" no Streamlit Cloud

[firebase]
type = "service_account"
project_id = "SEU_PROJECT_ID"
private_key_id = "SEU_PRIVATE_KEY_ID"
private_key = "-----BEGIN PRIVATE KEY-----\n..."
client_email = "seu-email@project.iam.gserviceaccount.com"
client_id = "SEU_CLIENT_ID"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/robot/v1/metadata/x509/..."
